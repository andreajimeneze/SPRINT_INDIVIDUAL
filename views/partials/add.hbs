<form action="/adm" method="post" class="form-addPdto">
  <h3 class="m-3">Agregar nuevo producto</h3>
  <div class="form-group formBody">
    <label class="form-label h6 fw-bold" for="nombre">Nombre Producto</label>
    <input class="form-control-sm rounded" type="text" name="namePdto" required>
  </div>
  <div class="form-group formBody">
    <label class="form-label h6 fw-bold" for="nombre">Imagen (Ingrese Link)</label>
    <input class="form-control-sm rounded" type="text" name="imgPdto" required>
  </div>

  <div class="formBody">
    <label class="form-label h6 fw-bold" for="precio">Precio</label>
    <input class="form-control-sm rounded" type="text" name="prizePdto" required>
  </div>
  <div class="formBody">
    <label class="form-label h6 fw-bold" for="cantPdto">Cant Disponible</label>
    <input class="form-control-sm rounded" type="text" name="cantPdto" required>
  </div>
 
  <div class="formBody-select">
    <label class="form-label h6 fw-bold" for="categoria">Categoría:</label>
    <select id="select-cat" name="categoria">
      <option value="categoria">Categoría</option>
       {{#each categ}}
      <option value="{{id}}">{{categoria}}</option>
       <h1>{{ categoria }}</h1>
      {{/each}}
    </select>
  </div>
  <div class="formBody-select">
    <label class="form-label h6 fw-bold" for="estado">Estado:</label>
    <select id="select-estado" name="estado">
      <option value="estado">Estado</option>
      {{#each estado}}
      <option value="{{id}}">{{descripcion}}</option>
      {{/each}}
    </select>

  </div>
  <button class="btn btn-primary" type="submit">Agregar</button>
</form>


<script>
  const form = document.querySelector('.form-addPdto');
  form.addEventListener('submit', (e) => {
    e.preventDefault();
    Swal.fire({
      title: '¿Estás seguro de agregar este producto?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Sí',
      cancelButtonText: 'No'
    }).then((result) => {
      if (result.isConfirmed) {
        form.submit();
        Swal.fire({
          title: 'Producto agregado exitosamente',
          icon: 'success',
          showCancelButton: false,
          showConfirmButton: false,
          timer: 5000
        });
      }
    });
  });
</script>